<body style="background-color: rgb(52, 56, 61); font-family: 'Roboto', sans-serif; text-align: center;">
<div style="padding-top: 300px; color: white;">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2>Forgot your password?</h2>
    <%= render "devise/shared/error_messages", resource: resource %>
</div>
<div style="padding-top: 10px; color: white;">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_sign_up" %>
</div>
  
<div style="padding-top: 10px; color: white;">
  <%= f.submit "Send me reset password instructions", class: "button_start_game" %>
</div>
<% end %>
