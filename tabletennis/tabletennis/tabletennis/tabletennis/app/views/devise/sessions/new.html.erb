<body style="background-color: rgb(52, 56, 61); font-family: 'Roboto', sans-serif; text-align: center;">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div style="padding-top: 300px; color: white;">
    <h2>Log in</h2>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_sign_up" %>
  </div>

  <div style="padding-top: 10px; color: white;">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "text_sign_up"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div style="padding-top: 10px; color: white;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div style="padding-top: 10px;">
    <%= f.submit "Log in", class: "button_start_game"%>
  </div>
<% end %>
</br>
<a href="/users/sign_up"><button class="button_start_game">Sign up</button></a></br></br>
